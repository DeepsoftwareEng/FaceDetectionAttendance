        <Image Height="900" Width="1169" Source="/Resource/Img/Background.jpg" Stretch="Fill" Margin="431,0,0,0" />
        <Image x:Name="logo"  Width="145" Height="145" Margin="143,72,1312,683" Source="/Resource/Img/solidcolor.png" Stretch="Fill" 
               />
        
    </Grid>
