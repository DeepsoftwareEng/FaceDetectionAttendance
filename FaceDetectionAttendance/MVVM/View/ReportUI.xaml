        <TextBox Name="Day_TextBox"
                 Width="79"
                 Height="27"
                 BorderThickness="5"
                 Margin="88,239,1163,634"/>
        <TextBox Name="Month_TextBox"
                 Width="79"
                 Height="27"
                 BorderThickness="5"
                 Margin="190,239,1062,634"/>
        <TextBox Name="Year_TextBox"
                 Width="79"
                 Height="27"
                 BorderThickness="5" Margin="290,239,961,634"/>
        <Button Content="Search"
                Name="Search_Button"
                Width="81"
                Height="27"
                FontSize="18"
                Margin="399,239,850,634"/>
